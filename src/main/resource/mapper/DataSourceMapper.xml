<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DataSourceDao">
    <resultMap id="dataSourceResultMap" type="DataSource">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="dataTypeId" column="dataTypeId"/>
        <result property="fieldList" column="fieldList"/>
    </resultMap>
    <insert id="addDataSource" parameterType="DataSource">
        INSERT INTO dataSource(name, dataTypeId, fieldList)
        VALUE (#{name}, #{dataTypeId}, #{fieldList})
    </insert>
    <select id="getAllDataSource" resultType="DataSource">
        SELECT *
        FROM dataSource
    </select>
    <delete id="deleteDataSourceById" parameterType="int">
        DELETE FROM dataSource WHERE id = #{id}
    </delete>
    <update id="updateDataSource" parameterType="DataSource">
        UPDATE dataSource SET name = #{name}, dataTypeId = #{dataTypeId}, fieldList = #{fieldList}
        WHERE id = #{id}
    </update>
    <select id="queryDataSourceByName" resultType="DataSource">
        SELECT * FROM dataSource
        WHERE name = #{name}
    </select>
    <select id="queryDataSourceById" resultType="DataSource">
        SELECT * FROM dataSource
        WHERE id = #{id}
    </select>
    <!-- 批量删除 -->
    <delete id="deleteDataSourceBatch" parameterType="int[]">
        delete from dataSource where id in
        <foreach collection="array" item="arr" index="no" open="("
                 separator="," close=")">
            #{arr}
        </foreach>
    </delete>
    <delete id="deleteDataSourceBatchByDataType" parameterType="int[]">
        delete from dataSource where dataTypeId in
        <foreach collection="array" item="arr" index="no" open="("
                 separator="," close=")">
            #{arr}
        </foreach>
    </delete>
</mapper>
